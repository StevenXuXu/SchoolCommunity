<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8">
<title>发布信息</title>
<%-include('header.ejs')%>
</head>
<body>
	<%-include('nav.ejs')%>
	<br>

	<div class="container">
		<div class="row">
			<div class="col-2">
				<%-include('left.ejs')%>
			</div>
			<div class="col-7">
				<div class="container">
					<h1 class="display-2" style="color: #007BFF;">发布信息</h1>
					<div class="card">
						<div class="card-header">输入内容</div>
						<div class="card-body">
							<form method="post" action="doPublish" enctype="multipart/form-data">
								<label>选择图片</label><br> <input type="file" name="publishimg">
								<br><br>
								<label>输入文字</label>
								<textarea class="form-control" id="exampleFormControlTextarea1"
									rows="3" name="text"><% if(text){ %><%=text%><% } %></textarea>
								<br>
								<div></div>
								<button type="submit" class="btn btn-primary">发布</button>
								<p style="color:green"><% if(info){ %><%=info%><% } %></p>
							</form>
						</div>
					</div>
				</div>
			</div>
			<div class="col-3">
				<%-include('right.ejs')%>
			</div>
		</div>
	</div>
	<%-include('footer.ejs')%>

</body>
</html>